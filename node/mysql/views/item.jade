extends ./layout.jade
block content
  a(href='/') go back
  h2= item.title
  p= item.description
  h3 user reviews
  
  if (reviews.length)
    each review in reviews
      .reviews
        b #{review.stars} stars
        p= review.text
      hr
    else
      p no reviews to show. write one!

  form(action='/item/#{item.id}/review', method='POST')
    fieldset
      legend create review
      p
        label stars
        select(name='stars')
          option 1
          option 2
          option 3
          option 4
          option 5
      p
        label review
        textarea(name='text')
      p
        button(type='submit') send
