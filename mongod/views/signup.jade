extends ./layout
block content
  form(action='/signup', method='POST')
    fieldset
      legend Sign up
      p
        label first
        input(name='user[first]', type='text')
      p
        label Last
        input(name='user[last]', type='text')
      p
        label Email
        input(name='user[email]', type='text')
      p
        label Password
        input(name='user[password]', type='password')
      p
        button(type='submit') submit
      p
        a(href='/') Go Back
